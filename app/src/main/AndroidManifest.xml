<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="uni.tbd.openday" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >

        <service
            android:name=".helper.firebasenotify.MessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>

        <service
            android:name=".helper.firebasenotify.InstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

        <receiver android:name=".helper.BootBR">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <service
            android:name=".helper.MainService"
            android:stopWithTask="false" />

        <activity
            android:name=".module.splash.SplashActivity"
            android:theme="@style/Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".module.signin.view.SigninActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".module.profilesetup.view.ProfileSetupActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".module.main.Chats"
            android:screenOrientation="portrait" />

        <activity
            android:name=".chat.view.ChatActivity"
            android:screenOrientation="portrait"/>

        <activity
            android:name=".module.postdetail.view.PostDetailActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".module.profile.view.ProfileActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".webview" />
        <activity android:name=".TRAC_NGHIEM" />
        <activity android:name=".GT_NGANH" />
        <activity android:name=".GT_KHOA" />
        <activity android:name=".SUKIEN" />
        <activity android:name=".NGANH" />
        <activity android:name=".KHOA" />
        <activity android:name=".Activity.BuildingInfo" />
        <activity android:name=".Activity.event_info" />
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity android:name=".ActivityBuilding" />
        <activity android:name=".Activity.event_add" />
    </application>

</manifest>